{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "*.d.ts",
    "*.js",
    "node_modules/"
  ],
  "rules": {
    "no-undef": "off",
    "no-unused-vars": "off",
    "sort-imports": "off",
    "quote-props": [
      "error",
      "as-needed"
    ],
    "sort-keys": [
      "error",
      "asc",
      {
        "caseSensitive": true,
        "natural": false,
        "minKeys": 2
      }
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
